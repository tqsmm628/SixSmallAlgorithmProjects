<Window x:Class="NetworkClasses.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkClasses"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Name="netTextBox" Margin="10,10,200,125" Grid.Row="0"/>
        <Label Name="statusLabel" Grid.Row="1">Status Bar</Label>
        <Button Name="network1" Content="Network 1" HorizontalAlignment="Left" Margin="10,290,0,0" VerticalAlignment="Top" Click="network1_Click"/>
        <Button Name="network2" Content="Network 2" HorizontalAlignment="Left" Margin="87,290,0,0" VerticalAlignment="Top" Click="network2_Click"/>
        <Button Name="network3" Content="Network 3"  HorizontalAlignment="Left" Margin="165,290,0,0" VerticalAlignment="Top" Click="network3_Click"/>
    </Grid>
</Window>